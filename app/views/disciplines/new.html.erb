<h1>New Discipline</h1>

<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <%= form_with(model: @discipline, local: true) do |f| %>
          <% if @discipline.errors.any? %>
            <div class="alert alert-danger">
              <h2><%= pluralize(@discipline.errors.count, "error") %> prohibited this discipline from being saved:</h2>
              <ul>
                <% @discipline.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :code, class: "form-label" %>
            <%= f.text_field :code, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :description, class: "form-label" %>
            <%= f.text_area :description, class: "form-control", rows: 4 %>
          </div>

          <div class="mb-3">
            <%= f.label :horas, class: "form-label" %>
            <%= f.number_field :horas, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :professor_id, "Professor", class: "form-label" %>
            <%= f.collection_select :professor_id, @professors, :id, :name, { include_blank: "Select a professor" }, class: "form-control", required: true %>
          </div>

          <div class="actions">
            <%= f.submit "Create Discipline", class: "btn btn-primary" %>
            <%= link_to "Back", disciplines_path, class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
