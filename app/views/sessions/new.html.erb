<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h2 class="text-center">Entrar no FAKE SIGA UFPR</h2>
      </div>
      <div class="card-body">
        <%= form_with(url: login_path, local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :email, "E-mail", class: "form-label" %>
            <%= f.email_field :email, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Senha", class: "form-label" %>
            <%= f.password_field :password, class: "form-control", required: true %>
          </div>

          <div class="d-grid">
            <%= f.submit "Entrar", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>      <div class="card-footer text-center">
        <p class="mb-0">Credenciais de teste:</p>
        <p class="small mb-0">Admin: admin@teste.com / admin123</p>
        <p class="small mb-0">Aluno: aluno@teste.com / aluno123</p>
      </div>
    </div>
  </div>
</div>
