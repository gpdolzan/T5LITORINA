<h1>Nova Sala</h1>

<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <%= form_with(model: @room, local: true) do |f| %>
          <% if @room.errors.any? %>
            <div class="alert alert-danger">
              <h2><%= pluralize(@room.errors.count, "erro") %> impediram que esta sala fosse salva:</h2>
              <ul>
                <% @room.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :number, "Número", class: "form-label" %>
            <%= f.text_field :number, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :building, "Prédio", class: "form-label" %>
            <%= f.text_field :building, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :capacity, "Capacidade", class: "form-label" %>
            <%= f.number_field :capacity, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :professor_id, "Professor Responsável", class: "form-label" %>
            <%= f.collection_select :professor_id, @professors, :id, :name, { include_blank: "Selecione um professor" }, class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Criar Sala", class: "btn btn-primary" %>
            <%= link_to "Voltar", rooms_path, class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
