<h1>Editar Usuário</h1>

<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <%= form_with(model: @user, local: true) do |f| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <h2><%= pluralize(@user.errors.count, "erro") %> impediram este usuário de ser salvo:</h2>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :name, "Nome", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label" %>
            <%= f.email_field :email, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Senha", class: "form-label" %>            <%= f.password_field :password, class: "form-control" %>
            <small class="form-text text-muted">Deixe em branco se não quiser alterar</small>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmação de Senha", class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :role, "Papel", class: "form-label" %>
            <%= f.select :role, [["Administrador", "admin"], ["Aluno", "user"]], {}, class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Atualizar Usuário", class: "btn btn-primary" %>
            <%= link_to "Voltar", users_path, class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
